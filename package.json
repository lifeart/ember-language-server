{
  "name": "@emberwatch/ember-language-server",
  "description": "A language server implementation for Ember.js projects.",
  "version": "0.2.2",
  "contributors": [
    "Aleksandr Kanunnikov <lifeart92@gmail.com>",
    "Tobias Bieniek <tobias.bieniek@gmail.com>",
    "Thomas Sauer <t-sauer@outlook.de>"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lifeart/ember-language-server.git"
  },
  "engines": {
    "node": ">= 10.16.3"
  },
  "main": "lib/start-server.js",
  "typings": "lib/start-server.d.ts",
  "dependencies": {
    "@glimmer/syntax": "^0.52.0",
    "ast-types": "^0.13.3",
    "cross-spawn": "^7.0.3",
    "dag-map": "^2.0.2",
    "ember-meta-explorer": "^0.1.1",
    "extract-tagged-template-literals": "^1.0.3",
    "find-up": "^4.1.0",
    "fs-extra": "^8.1.0",
    "fuzzaldrin": "^2.1.0",
    "i": "^0.3.5",
    "lodash": "^4.17.15",
    "memoizee": "^0.4.14",
    "rimraf": "^3.0.2",
    "util": "^0.12.3",
    "vscode-languageserver": "^6.1.1",
    "vscode-languageserver-textdocument": "^1.0.1",
    "vscode-uri": "^2.1.1",
    "walk-sync": "^2.1.0"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/estree": "*",
    "@types/fuzzaldrin": "^2.1.1",
    "@types/jest": "^24.0.21",
    "@types/lodash": "^4.14.144",
    "@types/memoizee": "^0.4.3",
    "@types/node": "^12.12.5",
    "@typescript-eslint/eslint-plugin": "^3.0.0",
    "@typescript-eslint/parser": "^3.0.0",
    "broccoli-test-helper": "^2.0.0",
    "eslint": "^7.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "lerna-changelog": "^0.8.2",
    "lint-staged": "^10.2.6",
    "nyc": "^15.1.0",
    "prettier": "^2.0.5",
    "source-map-support": "^0.5.19",
    "ts-jest": "^25.1.0",
    "ts-node": "^8.10.2",
    "typescript": "^3.6.4",
    "vscode-jsonrpc": "^4.0.0",
    "vscode-languageserver-protocol": "^3.14.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "yarn lint --fix",
      "git add"
    ]
  },
  "prettier": {
    "tabWidth": 2,
    "semi": true,
    "printWidth": 160,
    "singleQuote": true,
    "arrowParens": "always",
    "parser": "typescript"
  },
  "scripts": {
    "changelog": "lerna-changelog",
    "clean": "rimraf lib/",
    "compile": "tsc --skipLibCheck -p .",
    "lint": "eslint . --ext js,ts",
    "prepublish": "yarn clean && yarn compile",
    "test": "jest",
    "test:coverage": "rimraf inst/ && nyc instrument lib inst && nyc --clean --reporter=clover --reporter=json --reporter=lcov yarn run jest --no-coverage && nyc merge .nyc_output ./coverage/coverage-final.json",
    "watch": "tsc --watch -p ."
  },
  "volta": {
    "node": "10.16.3",
    "yarn": "1.22.4"
  }
}
